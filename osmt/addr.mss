/* address labels */

#addr-point {
  [zoom > 17] {
    text-name: "[addrnum]";
    text-face-name: "Liberation Sans Regular";
    text-fill: white;
    text-placement: interior;
    text-halo-fill: black;
    text-halo-radius: 1.5;

    text-size: 12;
  }
}

#addr-interpolation {
  [zoom > 17] {
    line-color: #222222;
    line-opacity: 0.8;
    line-dasharray: 3,3;
    line-width: 3;
  }
}
